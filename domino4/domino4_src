#!/usr/bin/env bash
# GPIO 핀 번호 변수
pins=(5 6 13 19)

# root 권한 확인
if [[ $EUID -ne 0 ]]; then
    echo "이 스크립트는 root 권한이 필요합니다. sudo로 실행하세요."
    exit 1
fi

# pinctrl 존재 확인
if ! command -v pinctrl &> /dev/null; then
    echo "'pinctrl' 명령어가 설치되어 있지 않습니다."
    exit 1
fi

# 출력 모드 설정
for pin in "${pins[@]}"; do
    pinctrl set "$pin" op || { echo "GPIO $pin 설정 실패"; exit 1; }
done

# 종료 시 핀 초기화
cleanup() {
    echo "종료 중: GPIO 핀 LOW로 초기화 중..."
    for pin in "${pins[@]}"; do
        pinctrl set "$pin" dl
    done
    exit 0
}
# SIGINT (Ctrl+C) 또는 SIGTERM 수신 시 cleanup 실행
trap cleanup SIGINT SIGTERM

# 순차적으로 GPIO를 High로 설정하고 대기 후 Low로 복귀
toggle_sequence() {
    for pin in "${pins[@]}"; do
        pinctrl set "$pin" dh
        sleep 1
        pinctrl set "$pin" dl
    done
}

# 무한 루프 실행
while true; do
    toggle_sequence
done
